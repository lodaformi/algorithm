/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Codec {
public:
    string SEP = ",";
    string NULLCHAR = "#";

    //序列化
    // Encodes a tree to a single string.
    string serialize(TreeNode* root) {
        //方法一：前序遍历
        //使用stringstream存放陆续存进去的字符串
        stringstream ss;

        serialize(root, ss);

        //将stringstream转换为string
        return ss.str();
    }

    //方法重载overload
    //注意stringstream传入的是引用
    void serialize(TreeNode* root, stringstream& ss) {
        //二叉树的前序遍历
        //如果root为空指针，将NULLCHAR和SEP写入到ss中
        if  (root == nullptr) {
            ss << NULLCHAR << SEP;
            return;
        }

        //如果root不为空，将root->val和SEP写入到ss中
        ss << root->val << SEP;

        //递归遍历root的左右子树
        serialize(root->left, ss);
        serialize(root->right, ss);
    }

    //反序列化
    // Decodes your encoded data to tree.
    TreeNode* deserialize(string data) {
        if (data.size() == 0)  return nullptr;

        //使用list存放分隔出来的字符串
        list<string> ls;

        //因为下面要使用strtok函数，它的输入是char*，所以将字符串转换为char*类型
        //将字符串转换为char *
        char *input = new char[data.size() + 1];    //注意多申请一个空间，用于存放\0
        strcpy(input, data.c_str());                //字符串拷贝，先将string转换为char*，再拷贝到input中

        //将分隔符转换为char *
        char *delimiters = new char[SEP.size() + 1];
        strcpy(delimiters, SEP.c_str());

        //以","逗号为分隔符，将input中的元素分隔开，同时存入链表中
        char *token = strtok(input, delimiters);
        while (token) {
            string s = token;
            ls.push_back(s);
            token = strtok(nullptr, delimiters);
        }

        return deserialize(ls);
    }

    //反序列化辅助函数
    //注意传入的是引用
    TreeNode* deserialize(list<string>& ls) {
        //第一个元素即为链表的根节点，取出其值
        string str = ls.front();
        //删除第一个元素
        ls.pop_front();

        //如果str为#，返回空指针
        if (str == NULLCHAR) return nullptr;
        //如果str不为#，则创建节点
        //string转换成int的方法，stoi()
        TreeNode* root = new TreeNode(stoi(str));

        //递归生成左右子树
        root->left = deserialize(ls);
        root->right = deserialize(ls);

        return root;
    }
};

// Your Codec object will be instantiated and called as such:
// Codec ser, deser;
// TreeNode* ans = deser.deserialize(ser.serialize(root));
///////////////////////////////////////////////////////////////////////////////////////////
    //二叉树后序遍历
    string SEP = ",";
    string NULLCHAR = "#";
    // Encodes a tree to a single string.
    string serialize(TreeNode* root) {
        stringstream ss;
        serialize(root, ss);

        return ss.str();
    }

    void serialize(TreeNode* root, stringstream& ss) {        
        if (root == nullptr) {
            ss << NULLCHAR << SEP;
            return;
        }

        //后序遍历
        serialize(root->left, ss);
        serialize(root->right, ss);

        ss << root->val << SEP;
    }

    // Decodes your encoded data to tree.
    TreeNode* deserialize(string data) {
        if (data.size() == 0)  return nullptr;
        //以逗号为分隔符将data分开并存放到list中
        list<string> ls;

        char* input = new char[data.size() + 1];
        strcpy(input, data.c_str());

        char* delimiter = new char[SEP.size() + 1];
        strcpy(delimiter, SEP.c_str());

        char* pch = strtok(input, delimiter);
        while(pch) {
            string s = pch;
            ls.push_back(s);
            pch = strtok(nullptr, delimiter);
        }

        return deserialize(ls);
    }

    TreeNode* deserialize(list<string>& ls) {
        //后序遍历的最后一个节点为根节点，取出后删除
        string s = ls.back();
        ls.pop_back();

        if (s == NULLCHAR) return nullptr;
        TreeNode* root = new TreeNode(stoi(s));

        //递归生成子树，注意后序遍历先生成右子树
        root->right = deserialize(ls);
        root->left = deserialize(ls);

        return root;
    }

////////////////////////////////////////////////////////////////////////////////
class Codec {
public:
    //层序遍历
    string SEP = ",";
    string NULLCHAR = "#";

    // Encodes a tree to a single string.
    string serialize(TreeNode* root) {
        if (root == nullptr) return "";

        stringstream ss;
        //层序遍历需要借助队列
        queue<TreeNode*> q;
        q.push(root);

        //每次取出一个节点，将当前节点的左右孩子加入到队列中，循环执行，直到队列为空
        while (!q.empty()) {
            //取出当前节点
            TreeNode* node = q.front();
            //从队列中删除
            q.pop();

            //如果当前节点为空，则向ss中写入#，
            if (node == nullptr) {
                ss << NULLCHAR << SEP;
                continue;
            }

            //如果当前节点不为空，则向ss中写入val，
            ss << node->val << SEP;

            //将当前节点的左右孩子加入到队列中
            q.push(node->left);
            q.push(node->right);
        }

        return ss.str();
    }


    // Decodes your encoded data to tree.
    TreeNode* deserialize(string data) {
        if (data.size() == 0) return nullptr;

        //以逗号为分隔符将data分开放入到list中
        list<string> ls;

        char* input = new char[data.size() + 1];
        strcpy(input, data.c_str());

        char* delimiter = new char[SEP.size() + 1];
        strcpy(delimiter, SEP.c_str());

        char* pch = strtok(input, delimiter);
        while (pch) {
            string s = pch;
            ls.push_back(s);
            pch = strtok(nullptr, delimiter);
        }
        //这一段代码执行完后，ls中存放的是值和#号

        //层序遍历需要借助队列
        //取出ls中的第一个元素，并创建根节点 
        TreeNode* root = new TreeNode(stoi(ls.front()));
        //将ls中的第一个元素删除
        ls.pop_front();

        //创建队列，将根节点入队
        queue<TreeNode*> q;
        q.push(root);

        //每次从队列中取出一个节点，从ls中取出两个值，判断其值作为该节点的左右孩子，并入队，直到ls为空
        while (!ls.empty()) {
            //从队列中取出头结点
            TreeNode* node = q.front();
            //从队列中删除头结点
            q.pop();

            //从ls中取出第一个值
            string s = ls.front();
            //将ls中第一个值删除
            ls.pop_front();
            if (s == NULLCHAR) {
                //如果s为#，将左孩子置空
                node->left = nullptr;
            }else{
                //如果s不为#，创建左孩子，并入队
                node->left = new TreeNode(stoi(s));
                q.push(node->left);
            }
            
            //从ls中继续取值，并从队列中删除
            s = ls.front();
            ls.pop_front();
            if (s == NULLCHAR) {
                //如果s为#，将右孩子置空
                node->right = nullptr;
            }else{
                //如果s不为#，创建右孩子，并入队
                node->right = new TreeNode(stoi(s));
                q.push(node->right);
            }
        }

        return root;
    }
};
